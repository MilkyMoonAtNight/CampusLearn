@model CampusLearn.Models.MessageView

<div class="chat-container">
    <h2>Conversation with @Model.AllUsers.FirstOrDefault(u => u.ID == Model.SelectedRecipientID)?.FirstName</h2>

    <div class="chat-thread">
        @if (Model.Messages == null || !Model.Messages.Any())
        {
            <p>No messages yet. Start the conversation!</p>
        }
        else
        {
            foreach (var message in Model.Messages)
            {
                var isSentByCurrentUser = message.SenderID == Model.CurrentUserID;
                <div class="chat-bubble @(isSentByCurrentUser ? "sent" : "received")">
                    <div class="chat-meta">
                        <strong>@(isSentByCurrentUser ? "You" : Model.AllUsers.FirstOrDefault(u => u.ID == message.SenderID)?.FirstName)</strong>
                        <span class="timestamp">@message.Timestamp.ToString("g")</span>
                    </div>
                    <div class="chat-text">@message.Content</div>
                </div>
            }
        }
    </div>

    <form asp-action="SendMessage" method="post" class="chat-form">
        <input type="hidden" name="recipientId" value="@Model.SelectedRecipientID" />
        <textarea name="messageText" rows="3" placeholder="Type your message..." required></textarea>
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>

<style>
    .chat-container {
        max-width: 700px;
        margin: auto;
        padding: 20px;
    }

    .chat-thread {
        border: 1px solid #ccc;
        padding: 15px;
        margin-bottom: 20px;
        max-height: 400px;
        overflow-y: auto;
        background-color: #f9f9f9;
    }

    .chat-bubble {
        margin-bottom: 15px;
        padding: 10px;
        border-radius: 10px;
        max-width: 80%;
    }

    .sent {
        background-color: #d1e7dd;
        align-self: flex-end;
        margin-left: auto;
    }

    .received {
        background-color: #f8d7da;
        align-self: flex-start;
        margin-right: auto;
    }

    .chat-meta {
        font-size: 0.9em;
        color: #555;
        margin-bottom: 5px;
    }

    .chat-text {
        font-size: 1em;
    }

    .chat-form textarea {
        width: 100%;
        margin-bottom: 10px;
    }
</style>
