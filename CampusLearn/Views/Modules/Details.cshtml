@model CampusLearn.Models.TopicModule
@{
    ViewData["Title"] = "Module Details";
}

<style>
    .module-details {
        max-width: 900px;
        margin: auto;
        padding: 30px;
        font-family: 'Segoe UI';
    }

    .section {
        margin-bottom: 40px;
    }

        .section h3 {
            margin-bottom: 15px;
            border-bottom: 2px solid #0078D7;
            padding-bottom: 5px;
        }

    .card {
        background: #f9f9f9;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 10px;
        box-shadow: 0 0 5px rgba(0,0,0,0.05);
    }

    .card-title {
        font-weight: bold;
        color: #0078D7;
    }

    .card-sub {
        font-size: 0.9em;
        color: #555;
        margin-bottom: 5px;
    }
</style>

<div class="module-details">
    <h2>@Model.ModuleName</h2>
    <p><strong>Cluster:</strong> @Model.ModuleCluster?.ClusterName ?? "N/A"</p>
    <p><strong>Instructor:</strong> @Model.ModuleHead?.TutorName ?? "TBA"</p>

    <div class="section">
        <h3>📚 Resources</h3>
        @if (Model.ModuleResources != null && Model.ModuleResources.Any())
        {
            @foreach (var res in Model.ModuleResources)
            {
                <div class="card">
                    <div class="card-title">@res.ResourceType</div>
                    <a href="@res.ResourceURL" target="_blank">@res.ResourceURL</a>
                </div>
            }
        }
        else
        {
            <p>No module resources available.</p>
        }
    </div>
</div>
