@model IEnumerable<CampusLearn.Models.TopicModule>
@{
    ViewData["Title"] = "Modules";
}

<style>
    .modules-container {
        max-width: 1000px;
        margin: auto;
        padding: 30px;
        font-family: 'Segoe UI', sans-serif;
    }

    .modules-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
    }

    .module-card {
        background-color: #f0f8ff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 8px rgba(0,0,0,0.05);
        transition: transform 0.2s ease;
    }

        .module-card:hover {
            transform: scale(1.02);
        }

    .module-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }

    .module-content {
        padding: 15px;
    }

    .module-title {
        font-size: 1.2em;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .module-info {
        font-size: 0.95em;
        color: #555;
        margin-bottom: 5px;
    }

    .download-btn {
        background-color: #0078D7;
        color: white;
        padding: 8px 12px;
        border: none;
        border-radius: 5px;
        font-size: 0.9em;
        margin-top: 10px;
    }
</style>

<div class="modules-container">
    <h2>Available Modules</h2>
    <div class="modules-grid">
        @foreach (var module in Model)
        {
            <a asp-controller="Modules" asp-action="Details" asp-route-id="@module.ModuleID" style="text-decoration:none; color:inherit;">
                <div class="module-card">
                    <img src="@(module.ModuleResources?.FirstOrDefault()?.ResourceURL ?? "/images/default-module.jpg")"
                         alt="@module.ModuleName" class="module-image" />
                    <div class="module-content">
                        <div class="module-title">@module.ModuleName</div>
                        <div class="module-info"><strong>Instructor:</strong> @(module.ModuleHead != null ? module.ModuleHead.TutorName + " " + module.ModuleHead.TutorSurname : "TBA")</div>
                        <div class="module-info"><strong>Cluster:</strong> @(module.ModuleCluster?.ClusterName ?? "Unassigned")</div>
                        <button class="download-btn">Download Offline</button>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
