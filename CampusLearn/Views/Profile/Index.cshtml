@model CampusLearn.Models.User
@{
    ViewData["Title"] = "Profile";
}
<style>
.profile-container {
    max-width: 800px;
    margin: auto;
    padding: 20px;
    background: linear-gradient(to bottom, #3a7bd5, #00d2ff);
    color: white;
    border-radius: 10px;
}

.profile-header {
    text-align: center;
    margin-bottom: 30px;
}

.avatar img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
}

.last-access {
    font-style: italic;
}

.profile-actions {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-bottom: 30px;
}

.action-box {
    background-color: white;
    color: #333;
    text-align: center;
    padding: 20px;
    border-radius: 10px;
}

.about-me {
    background-color: white;
    color: #333;
    padding: 20px;
    border-radius: 10px;
    margin-bottom: 20px;
}

.btn-logout {
    background-color: purple;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
}

</style>

<div class="profile-container">
    <!-- Top Section -->
    <div class="profile-header">
        <div class="avatar">
            <img src="~/images/user.svg" alt="User Avatar" />
        </div>
        <h2>@Model.FullName</h2>
        <p class="last-access">Last access: @Model.LastAccess.ToString("dddd, d MMMM yyyy")</p>
    </div>

    <!-- Middle Section: Quadrants -->
    <div class="profile-actions">
        <div class="action-box">
            <img src="~/images/address-book.svg" alt="Contacts" />
            <span>Contacts</span>
        </div>
        <div class="action-box">
            <a class="nav-link text-dark" asp-controller="Forums" asp-action="Index"><img src="~/images/browsers.svg" alt="Forums" /></a>
            <span>Forums</span>
        </div>
        <div class="action-box">
            <img src="~/images/seal.svg" alt="Badges" />
            <span>Badges</span>
        </div>
        <div class="action-box">
            <a href="www.linkedin.com/home/?originalSubdomain=za"><img src="~/images/linkedin-logo.svg" alt="LinkedIn" /></a>
            <span>LinkedIn</span>
        </div>
    </div>

    <!-- Bottom Section: About Me -->
    <div class="about-me">
        <h3>About Me</h3>
        <p><strong>First Name:</strong> @Model.FirstName</p>
        <p><strong>M. Initial:</strong> @Model.MiddleInitial</p>
        <p><strong>Last Name:</strong> @Model.LastName</p>
        <p><strong>Email Address:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Groups:</strong> @string.Join(", ", Model.Groups)</p>
    </div>

    <!-- Logout Button -->
    <form asp-action="Logout" method="post">
        <button type="submit" class="btn-logout">Log out</button>
    </form>
</div>
