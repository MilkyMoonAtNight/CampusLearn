@model IEnumerable<CampusLearn.Models.ForumTopic>
@{
    ViewData["Title"] = "Forums";
}

<style>
    .forums-container {
        max-width: 1000px;
        margin: auto;
        padding: 20px;
        font-family: 'Segoe UI', sans-serif;
    }

    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .search-bar input {
        padding: 10px;
        width: 300px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .btn-anonymous {
        background-color: #0078D7;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
    }

    .featured-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .forum-card {
        background-color: #f0f0f0;
        border-left: 8px solid #0078D7;
        padding: 20px;
        border-radius: 10px;
        position: relative;
    }

        .forum-card h3 {
            margin-top: 0;
        }

        .forum-card .bell-icon {
            position: absolute;
            top: 15px;
            right: 15px;
            font-size: 20px;
            color: #0078D7;
        }

    .old-forums {
        margin-top: 40px;
        font-style: italic;
        color: #666;
    }
</style>

<div class="forums-container">
    <!-- Header -->
    <div class="header-section">
        <div class="search-bar">
            <input type="text" placeholder="Search forums..." />
        </div>
        <a asp-controller="Forum" asp-action="Add" class="btn-anonymous">
            ➕ New Forum
        </a>

    </div>

    <!-- Featured Forums -->
    @for (int i = 0; i < Model.Count(); i++)
    {
        var topic = Model.ElementAt(i);
        <a asp-controller="Forum" asp-action="Details" asp-route-id="@i" style="text-decoration:none; color:inherit;">
            <div class="forum-card">
                <span class="bell-icon">🔔</span>
                <h3>@topic.Title</h3>
                <p><strong>Discussion:</strong> @topic.Description</p>
                <p><strong>Contributions:</strong> @topic.Contributions</p>
                <p><strong>Progress:</strong> @topic.Progress</p>
            </div>
        </a>
    }


    <!-- Old Forums -->
    <div class="old-forums">
        <h4>Old Forums</h4>
        <p>Archived discussions and legacy threads will appear here.</p>
    </div>
</div>
