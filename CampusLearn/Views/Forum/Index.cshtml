@model IEnumerable<CampusLearn.Models.ForumTopic>

@{
    ViewData["Title"] = "Forums";
}

<style>
    .forum-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 20px;
        font-family: 'Segoe UI', sans-serif;
    }

    .forum-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

        .forum-header h2 {
            color: #333;
            font-weight: 700;
        }

        .forum-header a {
            background-color: #6a0dad;
            color: #fff;
            padding: 8px 14px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            transition: background-color 0.2s ease;
        }

            .forum-header a:hover {
                background-color: #580b9e;
            }

    .forum-card {
        background-color: #f8f8ff;
        border-radius: 10px;
        padding: 18px;
        margin-bottom: 15px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        transition: transform 0.15s ease;
    }

        .forum-card:hover {
            transform: scale(1.01);
        }

    .forum-title {
        font-size: 1.2em;
        color: #6a0dad;
        font-weight: bold;
        text-decoration: none;
    }

    .forum-subject {
        font-size: 0.95em;
        color: #555;
    }

    .forum-meta {
        font-size: 0.8em;
        color: #888;
        margin-top: 8px;
    }
</style>

<div class="forum-container">
    <div class="forum-header">
        <h2>Forum Discussions</h2>
        <a asp-controller="Forum" asp-action="Add">+ New Topic</a>
    </div>

    @if (Model.Any())
    {
        foreach (var topic in Model)
        {
            <div class="forum-card">
                <a asp-controller="Forum" asp-action="Details" asp-route-id="@topic.Id" class="forum-title">
                    @topic.Title
                </a>
                <div class="forum-subject">@topic.Subject</div>
                <div class="forum-meta">
                    Posted: @topic.CreatedAt.ToShortDateString() |
                    Replies: @topic.Replies?.Count() ?? 0 |
                    Status: @topic.Progress
                </div>
            </div>
        }
    }
    else
    {
        <p>No forum topics yet. Start one!</p>
    }
</div>
