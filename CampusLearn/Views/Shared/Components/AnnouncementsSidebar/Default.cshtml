@model IReadOnlyList<CampusLearn.Services.Announcement>

<div class="p-3 border-end bg-light min-vh-100">
    <h6 class="mb-3 text-primary">Latest Announcements</h6>

    @if (Model == null || !Model.Any())
    {
        <div class="text-muted small">No announcements.</div>
    }
    else
    {
        <ul class="list-unstyled m-0">
            @foreach (var a in Model)
            {
                <li class="mb-3">
                    <div class="small text-muted">@a.CreatedAt.ToString("g")</div>
                    <div class="fw-semibold">@a.Title</div>
                    <div class="small text-secondary">Module: <span class="badge bg-primary">@a.ModuleTag</span></div>
                    <div class="small mt-1 text-truncate" title="@a.Body">@a.Body</div>
                </li>
            }
        </ul>
    }

    <div class="mt-3">
        <a class="btn btn-sm btn-outline-primary w-100" asp-controller="Announcements" asp-action="Index">
            View all
        </a>
    </div>
</div>
