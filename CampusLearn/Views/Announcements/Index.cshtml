@model IEnumerable<CampusLearn.Models.Announcement>

<h2 class="mb-3">Announcements</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No announcements available.</div>
}
else
{
    <div class="list-group">
        @foreach (var a in Model)
        {
            <a asp-action="Details" asp-route-id="@a.AnnouncementID" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@a.Topic</h5>
                    <small>@a.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</small>
                </div>
                <p class="mb-1">@a.Discussion</p>
                <small class="text-muted">@a.Progress</small>
            </a>
        }
    </div>
}
