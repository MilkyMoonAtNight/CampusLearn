@model CampusLearn.Controllers.GradesController.GradesViewModel
@{
    ViewData["Title"] = "Grades";
}
<div class="container mt-4">
    <h2 class="mb-3">Grades</h2>

    <div class="card mb-4">
        <div class="card-body d-flex align-items-center justify-content-between">
            <div>
                <div class="text-muted">Overall</div>
                <h3 class="mb-0">@Model.Overall%</h3>
            </div>
            <div class="text-muted">Updated @DateTime.Now.ToString("g")</div>
        </div>
    </div>

    <div class="accordion" id="gradesAcc">
        @for (int i = 0; i < Model.Modules.Count; i++)
        {
            var m = Model.Modules[i];
            <div class="accordion-item">
                <h2 class="accordion-header" id="h-@i">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#c-@i">
                        <strong class="me-2">@m.Module</strong> <span class="badge bg-secondary">@m.Total%</span>
                    </button>
                </h2>
                <div id="c-@i" class="accordion-collapse collapse" data-bs-parent="#gradesAcc">
                    <div class="accordion-body p-0">
                        <table class="table table-sm mb-0">
                            <thead>
                                <tr><th>Component</th><th class="text-end">Mark</th></tr>
                            </thead>
                            <tbody>
                                @foreach (var e in m.Breakdown)
                                {
                                    <tr>
                                        <td>@e.Name</td>
                                        <td class="text-end">@e.Mark%</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
