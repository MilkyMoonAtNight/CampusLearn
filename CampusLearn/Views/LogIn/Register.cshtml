@model CampusLearn.Models.Student
@{
    ViewData["Title"] = "Register";
}
<style>
    :root {
        --primary: #6a0dad;
        --primary-600: #5a0099;
        --muted: #6b7280;
        --card-bg: rgba(255,255,255,0.82);
        --glass-blur: 8px;
        --max-width: 420px;
    }

    /* Page background */
    .login-page {
        min-height: calc(100vh - 80px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 48px 20px;
        background: radial-gradient(800px 400px at 10% 10%, rgba(106,13,173,0.06), transparent), radial-gradient(700px 350px at 90% 90%, rgba(0,122,255,0.04), transparent), linear-gradient(180deg, #fbfbff 0%, #f6f8ff 100%);
        font-family: 'Segoe UI', system-ui, -apple-system, "Helvetica Neue", Arial;
    }

    /* Card */
    .login-card {
        width: 100%;
        max-width: var(--max-width);
        background: var(--card-bg);
        border-radius: 14px;
        padding: 36px;
        box-shadow: 0 10px 30px rgba(20, 20, 50, 0.08);
        backdrop-filter: blur(var(--glass-blur));
        -webkit-backdrop-filter: blur(var(--glass-blur));
        text-align: center;
    }

    .brand {
        width: 76px;
        height: 76px;
        margin: 0 auto 14px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(106,13,173,0.12), rgba(90,0,153,0.06));
        box-shadow: 0 6px 18px rgba(106,13,173,0.08);
        overflow: hidden;
    }

        .brand img {
            max-width: 64px;
            max-height: 64px;
            display: block;
        }

    .login-title {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 6px;
        color: #111827;
    }

    .login-subtitle {
        font-size: 13px;
        color: var(--muted);
        margin-bottom: 22px;
    }

    /* Form */
    .login-form {
        display: grid;
        gap: 12px;
        margin-bottom: 8px;
    }

    .input {
        height: 48px;
        padding: 10px 12px;
        border-radius: 10px;
        border: 1px solid #ececf7;
        background: linear-gradient(180deg, rgba(255,255,255,0.6), rgba(250,250,252,0.6));
        transition: box-shadow 160ms ease, border-color 160ms ease, transform 120ms ease;
        font-size: 15px;
        color: #111827;
        outline: none;
    }

        .input::placeholder {
            color: #9aa0a6;
        }

        .input:focus {
            border-color: rgba(106,13,173,0.7);
            box-shadow: 0 6px 20px rgba(106,13,173,0.08);
            transform: translateY(-1px);
        }

    .btn-login {
        height: 48px;
        border-radius: 30px;
        border: none;
        background: linear-gradient(180deg, var(--primary), var(--primary-600));
        color: #fff;
        font-weight: 600;
        cursor: pointer;
        transition: transform 120ms ease, box-shadow 120ms ease, opacity 120ms ease;
        box-shadow: 0 8px 20px rgba(106,13,173,0.14);
    }

        .btn-login:hover {
            transform: translateY(-1px);
            box-shadow: 0 12px 30px rgba(106,13,173,0.18);
        }

    .helper-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 6px;
        font-size: 13px;
        color: var(--muted);
    }

    .register-link {
        color: var(--primary);
        text-decoration: none;
        font-weight: 600;
    }

        .register-link:hover {
            text-decoration: underline;
        }

    .alert {
        margin-top: 14px;
        padding: 10px 12px;
        border-radius: 10px;
        background: #fff6f6;
        color: #8b1e1e;
        border: 1px solid #ffd6d6;
        font-size: 13px;
    }

    /* Small screens */
    @@media (max-width: 480px) {
        .login-card {
            padding: 22px;
            border-radius: 12px;
        }

        .brand {
            width: 64px;
            height: 64px;
        }

        .login-title {
            font-size: 18px;
        }
    }
</style>

<div class="login-page">
    <main class="login-card" role="main" aria-labelledby="register-heading">
        <div class="brand" aria-hidden="true">
            <img src="~/images/campuslearn-removebg-preview.png" alt="CampusLearn logo" />
        </div>

        <h1 id="register-heading" class="login-title">Create Your CampusLearn Account</h1>
        <p class="login-subtitle">Fill in your details to register</p>

        <form asp-action="Register" method="post" class="login-form" novalidate>
            @Html.AntiForgeryToken()

            <input class="input" asp-for="FirstName" placeholder="First Name" />
            <input class="input" asp-for="MiddleName" placeholder="Middle Name (optional)" />
            <input class="input" asp-for="LastName" placeholder="Last Name" />
            <input class="input" asp-for="PersonalEmail" placeholder="Email" />
            <input class="input" asp-for="Phone" placeholder="Phone Number" />
            <input class="input" asp-for="PasswordHash" type="password" placeholder="Password" />

            <button type="submit" class="btn-login">Register</button>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert" role="alert">Please correct the errors and try again.</div>
        }

        <div class="helper-row">
            <span style="color:var(--muted);">Already have an account?</span>
            <a asp-controller="LogIn" asp-action="Index" class="register-link">Sign In</a>
        </div>
    </main>
</div>


